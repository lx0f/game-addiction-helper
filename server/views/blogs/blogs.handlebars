<div class="row mt-3 mb-3">
    <div class="col">
        <h2 style="margin-bottom: -0.5rem;">Random Blogs</h2>
    </div>
</div>

<div class="row row-cols-2 g-3 mb-4">
    {{#each rand}}
        <a href="/blogs/{{this.slug}}" class="text-decoration-none">
            <div class="col card hover" style="height: 100%;">
                <div class="card-body">
                    <h3 class="card-title">{{this.title}}</h3>
                    <p class="card-text">
                        {{this.preview}}
                    </p>
                </div>
            </div>
        </a>
    {{/each}}
</div>

<div class="row mb-3">
    <div class="col">
        <h2>All</h2>
    </div>
</div>

<div class="row mb-2">
    <div class="col">
        <div class="d-flex flex-column gap-2">
        {{#each blogs}}
        <a href="/blogs/{{this.slug}}" class="text-decoration-none text-black">
            <div class="fs-4 mb-2">
                {{this.title}}
            </div>
            <p>
                {{this.preview}}
            </p>
        </a>
        <hr>
        {{/each}}
        </div>
    </div>
</div>

<style>
    .hover:hover {
        border-width: 1px;
        border-color: #2563eb;
    }
</style>