{
    "name": "game-addiction-helper",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/index.js",
        "start:watch": "nodemon --delay 1000ms dist/index.js",
        "dev": "concurrently \"npx tsc --watch\" \"npm run sync && npm run start:watch\"",
        "sync": "concurrently \"npm run sync:blogs\" \"npm run sync:views\" \"npm run sync:questions\" \"npm run sync:posts\"",
        "sync:blogs": "rm -rf dist/blogs && mkdir -p dist/blogs && cp server/blogs/* dist/blogs/",
        "sync:views": "rm -rf dist/views && mkdir -p dist/views && cp -r server/views/* dist/views/",
        "sync:questions": "ts-node server/scripts/initQuestions.ts",
        "sync:posts": "ts-node server/scripts/initPosts.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-flash": "^0.0.2",
        "express-handlebars": "^7.1.2",
        "express-session": "^1.17.3",
        "lodash": "^4.17.21",
        "marked": "^8.0.0",
        "mongoose": "^7.5.0",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "passport-local-mongoose": "^8.0.0",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/lodash": "^4.14.198",
        "@types/marked": "^5.0.1",
        "@types/node": "^20.5.9",
        "@types/passport": "^1.0.12",
        "@types/passport-local": "^1.0.35",
        "@types/passport-local-mongoose": "^6.1.1",
        "concurrently": "^8.2.1",
        "eslint": "^8.48.0",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}
